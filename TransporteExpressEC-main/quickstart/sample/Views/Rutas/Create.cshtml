@model SampleMvcApp.ViewModels.Ruta

@{
    ViewData["Title"] = "Crear Rutas";
}

<h1>Crear</h1>

<h4>Ruta</h4>
<hr />
<style>
    body {
        background-color: ivory;
    }
</style>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaEmisionLicencia" class="control-label"></label>
                <input asp-for="FechaEmisionLicencia" class="form-control" />
                <span asp-validation-for="FechaEmisionLicencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaVencimientoLicencia" class="control-label"></label>
                <input asp-for="FechaVencimientoLicencia" class="form-control" />
                <span asp-validation-for="FechaVencimientoLicencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PuntoLlegada" class="control-label"></label>
                <input asp-for="PuntoLlegada" class="form-control" />
                <span asp-validation-for="PuntoLlegada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
